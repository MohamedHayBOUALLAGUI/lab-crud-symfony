<h1>liste des voitures</h1>
<a href="{{ path("add-voiture") }}" class="btn btn-success">Add voiture</a>
<table border="1">

    <tr>
        <td>Serie</td>
        <td>Date mise en circulation</td>
        <!--<td>Modele attribut de l'entité Voiture</td>-->
        <td>Modele depuis l'entité Modele</td>
    </tr>
    {% for v in listeVoitures %}
    <tr>
        <td>{{ v.Serie }}</td>
        <td>{{ v.DateMiseEn | date }}</td>
        <!--<td>{{ v.Modele}}</td>-->
        <td>{{ v.Model.libelle}}</td>
        <td><a href="{{ path("delete-voiture",{"id":v.id}) }}" class="btn btn-danger">Supprimer</a></td>
        <td><a href="{{ path("update-voiture",{"id":v.id}) }}" class="btn btn-warning">edit</a></td>
    </tr>
    {%  endfor %}
</table>

